{% extends 'AppBundle::layout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
{% endblock %}

{% block section %}
<section>
	<div class="container">
		<div class="center">
			<h2>Detalhe da impresa {{ company.name }}</h2>
	</div>
	<div class="row">
		<div class="col-md-12 col-sm-12">

          	<div class="single-profile-top wow fadeInDown animated">
						{% for oLCompanyMetier in company.companyMetier %}
							<h5>{{ oLCompanyMetier.metier.name }}</h5>
						{% endfor %}
						<address>{{ company.address }}
						{{ company.city.name }} {{ company.city.postalCode }}</address>
						<span aria-hidden="true" class="glyphicon glyphicon-phone-alt"> {{ company.phone }}</span>
						<br />
						<span aria-hidden="true" class="glyphicon glyphicon-phone"> {{ company.mobile }}</span>
						<br />
						<span aria-hidden="true" class="glyphicon glyphicon-print"> {{ company.fax }}</span>
						</div>
						<br />

			</div>

	</div>
</div>
</section>
{% endblock %}