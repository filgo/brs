{% extends 'AppBundle::layout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
{% endblock %}

{% block section %}
<section>
	<div class="container">
		<div class="center wow fadeInDown">
			<h1>Companies list</h2>
			<p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut <br> et dolore magna aliqua. Ut enim ad minim veniam</p>
	</div>
	<div class="row">
		<div class="col-md-12 col-sm-12">


          {% for oCompany in oLCompany %}
          	<div class="single-profile-top wow fadeInDown animated">
						<h4>{{ oCompany.name }}</h4>
						{% for oLCompanyMetier in oCompany.companyMetier %}
							<h5>{{ oLCompanyMetier.metier.name }}</h5>
						{% endfor %}
						<h5>{{ oCompany.city.name }} {{ oCompany.city.postalCode }}</h5>
						</div>
						<br />
          {% endfor %}

			</div>

	</div>
</div>
</section>
{% endblock %}